<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ebedef"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"/>

            <ImageView
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="16dp"
                    android:src="@drawable/ic_x_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:letterSpacing="-0.02"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:textColor="#000"
                    android:text="일정 추가"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <ScrollView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_marginHorizontal="15dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <EditText
                                android:id="@+id/et_schedule_title"
                                android:letterSpacing="-0.02"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:textSize="22sp"
                                android:layout_marginTop="38dp"
                                android:hint="일정 입력"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginBottom="16dp"
                                android:letterSpacing="-0.02"
                                android:textColor="#425ee5"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="15sp"
                                android:layout_marginTop="32dp"
                                android:text="날짜"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                android:layout_marginBottom="32dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:id="@+id/tv_date_start"
                                        android:layout_marginBottom="5dp"
                                        android:letterSpacing="-0.01"
                                        android:textColor="#000"
                                        android:textStyle="normal"
                                        android:fontFamily="sans-serif"
                                        android:textSize="15sp"
                                        android:text="219년 1월 1일"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:letterSpacing="-0.02"
                                        android:textColor="#000"
                                        android:fontFamily="sans-serif"
                                        android:textSize="20sp"
                                        android:id="@+id/tv_time_start"
                                        android:text="오전 10:00"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <ImageView
                                    android:src="@drawable/ic_arrow_gradation"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>

                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content">
                                <TextView
                                        android:id="@+id/tv_date_end"
                                        android:layout_marginBottom="5dp"
                                        android:letterSpacing="-0.01"
                                        android:textColor="#000"
                                        android:textStyle="normal"
                                        android:fontFamily="sans-serif"
                                        android:textSize="15sp"
                                        android:text="219년 1월 1일"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:letterSpacing="-0.02"
                                        android:textColor="#000"
                                        android:fontFamily="sans-serif"
                                        android:textSize="20sp"
                                        android:id="@+id/tv_time_end"
                                        android:text="오전 10:00"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                                android:layout_marginBottom="16dp"
                                android:letterSpacing="-0.02"
                                android:textColor="#425ee5"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="15sp"
                                android:layout_marginTop="32dp"
                                android:text="카테고리"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                <ImageView
                                        android:id="@+id/iv_category_contest"
                                        android:layout_marginRight="12dp"
                                        android:src="@drawable/ic_category_contest"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:text="공모전"
                                        android:letterSpacing="-0.02"
                                        android:textSize="14sp"
                                        android:textColor="#666666"
                                        android:textStyle="normal"
                                        android:fontFamily="sans-serif"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                <ImageView
                                        android:id="@+id/id_category_activity"
                                        android:layout_marginRight="12dp"
                                        android:src="@drawable/ic_category_activity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:text="대외활동"
                                        android:letterSpacing="-0.02"
                                        android:textSize="14sp"
                                        android:textColor="#666666"
                                        android:textStyle="normal"
                                        android:fontFamily="sans-serif"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                <ImageView
                                        android:id="@+id/id_category_club"
                                        android:layout_marginRight="12dp"
                                        android:src="@drawable/ic_category_club"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:text="동아리"
                                        android:letterSpacing="-0.02"
                                        android:textSize="14sp"
                                        android:textColor="#666666"
                                        android:textStyle="normal"
                                        android:fontFamily="sans-serif"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_height="wrap_content">
                                <ImageView
                                        android:id="@+id/iv_category_school"
                                        android:layout_marginRight="12dp"
                                        android:src="@drawable/ic_category_school"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:text="교내공지"
                                        android:letterSpacing="-0.02"
                                        android:textSize="14sp"
                                        android:textColor="#666666"
                                        android:textStyle="normal"
                                        android:fontFamily="sans-serif"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                <ImageView
                                        android:id="@+id/id_category_career"
                                        android:layout_marginRight="12dp"
                                        android:src="@drawable/ic_category_career"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:text="채용"
                                        android:letterSpacing="-0.02"
                                        android:textSize="14sp"
                                        android:textColor="#666666"
                                        android:textStyle="normal"
                                        android:fontFamily="sans-serif"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                            </LinearLayout>

                            <LinearLayout
                                    android:layout_marginBottom="36dp"
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                <ImageView
                                        android:id="@+id/id_category_extra"
                                        android:layout_marginRight="12dp"
                                        android:src="@drawable/ic_category_extra"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                <TextView
                                        android:text="기타"
                                        android:letterSpacing="-0.02"
                                        android:textSize="14sp"
                                        android:textColor="#666666"
                                        android:textStyle="normal"
                                        android:fontFamily="sans-serif"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                                android:layout_marginBottom="8dp"
                                android:letterSpacing="-0.02"
                                android:textColor="#425ee5"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="15sp"
                                android:text="메모"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <EditText
                                    android:paddingVertical="10dp"
                                    android:paddingHorizontal="10dp"
                                    android:background="@drawable/edit_text_line"
                                    android:layout_marginBottom="24dp"
                                    android:id="@+id/et_note"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lines="3"
                                    android:minLines="3"
                                    android:gravity="top"
                                    android:maxLines="5"/>
                        </RelativeLayout>

                        <TextView
                                android:layout_marginBottom="14dp"
                                android:letterSpacing="-0.02"
                                android:textColor="#425ee5"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="15sp"
                                android:text="알림"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <RelativeLayout
                                android:layout_marginBottom="35dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:letterSpacing="-0.02"
                                    android:textColor="#bdbdbd"
                                    android:textStyle="normal"
                                    android:fontFamily="sans-serif"
                                    android:textSize="14sp"
                                    android:text="마감 24시간 전 푸시 알림"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            <Switch
                                    android:id="@+id/sw_alarm"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                        android:id="@+id/btn_schedule_save"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="32dp"
                        android:layout_marginTop="18dp"
                        android:src="@drawable/bt_save_round"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</RelativeLayout>