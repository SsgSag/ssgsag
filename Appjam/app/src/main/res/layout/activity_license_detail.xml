<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ebedef"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"/>

            <ImageView
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="16dp"
                    android:src="@drawable/ic_x_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:letterSpacing="-0.02"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:textColor="#000"
                    android:text="자격증"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <ScrollView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_marginHorizontal="20dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true">
                        <EditText
                                android:id="@+id/et_schedule_title"
                                android:letterSpacing="-0.02"
                                android:textColor="#000"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif"
                                android:textSize="24sp"
                                android:layout_marginTop="38dp"
                                android:hint="자격증명 입력"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                        <RelativeLayout
                                android:layout_marginTop="32dp"
                                android:layout_marginBottom="60dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:letterSpacing="-0.02"
                                    android:textColor="#425ee5"
                                    android:fontFamily="sans-serif-medium"
                                    android:textSize="16sp"
                                    android:text="취득연도"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/tv_date_start"
                                    android:letterSpacing="-0.01"
                                    android:textColor="#000"
                                    android:textStyle="normal"
                                    android:fontFamily="sans-serif"
                                    android:textSize="18sp"
                                    android:text="2019년 01월"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                        </RelativeLayout>

                        <TextView
                                android:layout_marginBottom="16dp"
                                android:letterSpacing="-0.02"
                                android:textColor="#425ee5"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="16sp"
                                android:text="메모"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        <EditText
                                android:layout_marginBottom="158dp"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal"
                                android:textColor="#000"
                                android:lineSpacingExtra="8sp"
                                android:letterSpacing="-0.02"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="10dp"
                                android:background="@drawable/edit_text_line"
                                android:id="@+id/et_note"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lines="5"
                                android:minLines="4"
                                android:gravity="top"
                                android:maxLines="10"/>

                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                        android:id="@+id/btn_schedule_save"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/bt_save_round"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</RelativeLayout>