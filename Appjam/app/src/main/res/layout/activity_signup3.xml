<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUp.SignUp1">


    <ImageView
            android:id="@+id/iv_back_3"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_arrow_back"
            android:paddingHorizontal="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/progressbar_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:letterSpacing="-0.02"
                        android:textColor="#000"
                        android:text="학교 정보를 입력해주세요"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/img_signup_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/et_school"
                        android:hint="학교 선택"
                        android:singleLine="true"
                        android:letterSpacing="-0.02"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/et_major"
                        android:hint="학과 선택"
                        android:singleLine="true"
                        android:letterSpacing="-0.02"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/et_grade"
                        android:hint="학년"
                        android:singleLine="true"
                        android:letterSpacing="-0.02"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/et_sid"
                        android:hint="학번"
                        android:singleLine="true"
                        android:letterSpacing="-0.02"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </FrameLayout>

    </ScrollView>


    <ImageView
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/bt_next_unactive"
            android:id="@+id/iv_next_3"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>


</LinearLayout>