<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_above="@+id/login_text"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_logo_login"/>
        <LinearLayout
            android:layout_marginTop="25dp"
            android:id="@+id/login_text"
            android:clickable="false"
            android:layout_above="@+id/edit_id"
            android:layout_marginLeft="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/logo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.02"
                android:text="1분 만에 정리 끝"
                android:textColor="#ffffff"
                android:textSize="27sp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/logo_text"
                android:layout_alignParentTop="true"
                android:clickable="false"
                android:letterSpacing="-0.02"
                android:text="_슥삭"
                android:textColor="#ffffff"
                android:textSize="27sp"
                android:textStyle="bold" />
        </LinearLayout>
        <EditText
            android:layout_above="@+id/edit_password"
            android:id="@+id/edit_id"
            android:layout_marginTop="62dp"
            android:hint="아이디"
            android:maxLines="1"
            android:inputType="text"
            android:textColorHint="#b3ffffff"
            android:letterSpacing="-0.02"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_password"
            android:layout_above="@+id/forgot_password"
            android:layout_marginBottom="17dp"
            android:hint="비밀번호"
            android:textColorHint="#b3ffffff"
            android:letterSpacing="-0.02"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"/>

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/forgot_password"
            android:layout_above="@+id/btn_login"
            android:layout_marginBottom="62dp"
            android:layout_marginLeft="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:clickable="true"
                android:id="@+id/btn_auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:clickable="false"
                    android:id="@+id/btn_auto_login_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/checkbox_round"/>

                <TextView
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="26dp"
                    android:text="자동로그인"
                    android:textColor="#ccffffff"/>
            </RelativeLayout>


            <TextView
                android:clickable="true"
                android:id="@+id/btn_forgot_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textColor="#ccffffff"
                android:layout_marginEnd="24dp"
                android:text="비밀번호를 잊으셨나요?" />
        </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/btn_login"
            android:layout_above="@+id/btn_login_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:layout_width="312dp"
                android:layout_height="48dp"
                android:src="@drawable/bt_login"/>
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/btn_login_signup"
            android:layout_alignParentBottom="true"
            android:paddingTop="18dp"
            android:paddingBottom="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:textColor="#ccffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"/>
        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>