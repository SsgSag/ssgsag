<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup4Activity">
    <RelativeLayout
        android:id="@+id/signup4_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_back_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="320dp"
            android:clickable="true"
            android:src="@drawable/ic_arrow_back" />

        <ImageView
            android:id="@+id/progressbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/progressbar_4" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:paddingBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:id="@+id/signup4_text"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.02"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="이력을 입력해주세요"/>

            <TextView
                android:textSize="13sp"
                android:textColor="#000000"
                android:letterSpacing="-0.02"
                android:layout_toEndOf="@+id/signup4_text"
                android:text="(선택사항)"
                android:layout_marginTop="46dp"
                android:fontFamily="sans-serif"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/experience"
                android:layout_marginTop="44dp"
                android:layout_below="@+id/signup4_text"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:letterSpacing="-0.02"
                android:text="활동경험"/>

            <EditText
                android:id="@+id/experience_name"
                android:textSize="16sp"
                android:hint="경험명"
                android:textColorHint="#9e9e9e"
                android:layout_below="@+id/experience"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/experience_content"
                android:textSize="16sp"
                android:hint="주요 활동 내용"
                android:textColorHint="#9e9e9e"
                android:layout_below="@+id/experience_name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/experience_date"
                android:textSize="16sp"
                android:hint="기간"
                android:textColorHint="#9e9e9e"
                android:layout_below="@+id/experience_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLines="1"/>
            <RelativeLayout
                android:id="@+id/experience_plus_1"
                android:layout_below="@+id/experience_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/experience_plus"
                    android:layout_marginTop="12dp"

                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bt_signup_plus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가하기"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:letterSpacing="-0.02"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"

                    android:layout_toEndOf="@+id/experience_plus"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/certificate"
                android:layout_below="@+id/experience_plus_1"
                android:layout_marginTop="54dp"
                android:text="자격증"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:letterSpacing="-0.02" />
            <EditText
                android:id="@+id/certificate_name"
                android:textSize="16sp"
                android:hint="경험명"
                android:textColorHint="#9e9e9e"
                android:layout_below="@+id/certificate"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/certificate_date"
                android:textSize="16sp"
                android:hint="취득연도"
                android:textColor="#9e9e9e"
                android:layout_below="@+id/certificate_name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLines="1"/>

            <RelativeLayout
                android:layout_below="@+id/certificate_date"
                android:id="@+id/certificate_plus_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/certificate_plus"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bt_signup_plus"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/certificate_plus"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.02"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:text="추가하기"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/awards"
                android:layout_below="@+id/certificate_plus_1"
                android:layout_marginTop="54dp"
                android:text="수상내역"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:letterSpacing="-0.02" />
            <EditText
                android:id="@+id/awards_name"
                android:textSize="16sp"
                android:hint="수상명"
                android:textColorHint="#9e9e9e"
                android:layout_below="@+id/awards"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/awards_date"
                android:textSize="16sp"
                android:hint="수상내역"
                android:textColor="#9e9e9e"
                android:layout_below="@+id/awards_name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLines="1"/>

            <RelativeLayout
                android:layout_below="@+id/awards_date"
                android:id="@+id/awards_plus_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/awards_plus"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bt_signup_plus"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/awards_plus"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.02"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:text="추가하기"/>
            </RelativeLayout>



        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="true"
            android:id="@+id/btn_start4"
            android:src="@drawable/bt_start"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="56dp" />
    </RelativeLayout>

</LinearLayout>