<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_weight="2"
        android:clickable="false"
        android:background="#d8d8d8"
        android:id="@+id/info_animation1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/info_text1"
            android:clickable="false"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:id="@+id/title_interests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심분야 선택하기"
                android:textSize="22sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#000000"
                android:letterSpacing="-0.02"/>

            <TextView
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/title_interests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="9sp"
                android:layout_centerHorizontal="true"
                android:textColor="#9e9e9e"
                android:text= "관심분야 기반으로\n다양한 활동을 추천해드려요"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp">

            <ImageView
                android:id="@+id/progress_active1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/progress_active" />

            <ImageView
                android:id="@+id/progress_unactive1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/progress_active1"
                android:src="@drawable/progress_unactive" />

            <ImageView
                android:id="@+id/progress_unactive2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/progress_unactive1"
                android:src="@drawable/progress_unactive" />

            <ImageView
                android:id="@+id/progress_unactive3"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/progress_unactive2"
                android:src="@drawable/progress_unactive" />

            <ImageView
                android:id="@+id/progress_unactive4"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/progress_unactive3"
                android:src="@drawable/progress_unactive" />
        </RelativeLayout>
    </RelativeLayout>





</LinearLayout>